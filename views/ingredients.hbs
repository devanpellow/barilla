<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {{#each resultsArr}}
        {{#if @first}}
        <div class="carousel-item active ">
            <a href="https://google.de"></a>
            <img class="d-block w-100 carousel-image" src="{{image}}" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h5>{{name}}</h5>
                    <h6 class="text-left">PASTA</h6>
                    <p class="text-left ingredients-text">{{pasta}}</p>
                    <h6 class='text-left'>INGREDIENTS OWNED</h6>
                    <ul class="text-left ingredients-text">
                        {{#each own}}
                        <li>{{toUpperCase this}}</li>
                        {{/each}}
                    </ul>
                    <h6 class='text-left'>INGREDIENTS STILL NEEDED</h6>
                    <ul class="text-left ingredients-text">
                        {{#each buy}}
                        <li>{{toUpperCase this}}</li>
                        {{/each}}
                    </ul>
                    {{!-- <p class="text-left ingredients-text"></p> --}}
                    <h6 class="text-left">INGREDIENTS</h6>
                    <ul class="text-left ingredients-text">
                        {{#each ingredientsFull}}
                        <li>{{toUpperCase this}}</li>
                        {{/each}}
                    </ul>
                    {{!-- <p class="text-left ingredients-text">{{ingredientsFull}}</p> --}}
                    <h6 class="'text-left'">INSTRUCTIONS</h6>
                    <p class="text-left instructions-text">{{instructions}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="carousel-item ">
            <img class="d-block w-100 carousel-image" src="{{image}} " alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h5>{{name}}</h5>
                    <h6 class="text-left">PASTA</h6>
                    <p class="text-left ingredients-text">{{pasta}}</p>
                    <h6 class='text-left'>INGREDIENTS OWNED</h6>
                    <ul class="text-left ingredients-text">
                        {{#each own}}
                        <li>{{toUpperCase this}}</li>
                        {{/each}}
                    </ul>
                    <h6 class='text-left'>INGREDIENTS STILL NEEDED</h6>
                    <ul class="text-left ingredients-text">
                        {{#each buy}}
                        <li>{{toUpperCase this}}</li>
                        {{/each}}
                    </ul>
                    <h6 class="text-left">INGREDIENTS</h6>
                    <ul class="text-left ingredients-text">
                        {{#each ingredientsFull}}
                        <li>{{toUpperCase this}}</li>
                        {{/each}}
                    </ul>
                    {{!-- <p class="text-left ingredients-text">{{ingredientsFull}}</p> --}}
                    <h6 class="text-left">INSTRUCTIONS</h6>
                    <p class="text-left instructions-text">{{instructions}}</p>
                </div>
            </div>
        </div>
        {{/if}}
        {{/each}}

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>